[Unit]
Description=code-server
After=network.target

[Service]
Type=exec
{# IDEA: it might be a good idea to specify PATH with TeXLive path here. It seems
   https://coder.com/docs/code-server/latest/FAQ#how-do-i-change-the-port
   since adding LaTeX workshop extension, I have noticed 
   error exthost /bin/sh: 1: pdflatex: not found
   in the code-server log #}
{# note: command-line flags override settings in config.yaml #}
ExecStart=/usr/bin/code-server --auth {{ auth }}
Restart=always
User=%i

[Install]
WantedBy=default.target
